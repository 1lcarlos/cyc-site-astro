---
import Card from "./Card.astro";
---

<main>
  <h2>Servicios</h2>
  <h2>Catastro</h2>
  <div class="container-cards">
    <Card title="Avaluos" img="/cyc-site-astro/avaluo_icon.svg" />
    <Card
      title="Tramites Notariales y Registrales"
      img="/cyc-site-astro/tramites_nyr_icon.svg"
    />
    <Card title="Englobes y Desenglobes" img="/cyc-site-astro/englobes_icon.svg" />
    <Card title="Levantamientos Topograficos" img="/cyc-site-astro/topografia_icon.svg" />
    <Card title="Ventas" img="/cyc-site-astro/ventas_icon.svg" />
  </div>
  <h2>Soluciones Geoespaciales</h2>
  <div class="container-cards">
    <Card
      title="Desarrollo de Aplicativos Web y Móviles"
      img="/cyc-site-astro/desarrollo_icon.svg"
    />
    <Card title="Gestión de Datos Geográficos" img="/cyc-site-astro/geografia_icon.svg" />
    <Card
      title="Análisis de Datos y ETL- Extract Transform and Load"
      img="/cyc-site-astro/analisis_icon.svg"
    />
    <Card
      title="Estructuración de Bases de Datos-Modelo LADM-COL"
      img="/cyc-site-astro/Bases_icon.svg"
    />
    <Card
      title="Sensores Remotos e Interpretacion de Imagenes"
      img="/cyc-site-astro/sensores_icon.svg"
    />
  </div>
</main>

<style>
  .container-cards {
    display: flex;
    justify-content: space-around;
    margin-top: 45px;
  }
  h2 {
    color: white;
    text-align: center;
  }
  
</style>
